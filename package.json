{
  "name": "nurse-scheduling-problem",
  "version": "0.1.0",
  "private": true,
  "description": "<your project description>",
  "author": "<author of app>",
  "build": {
    "appId": "<com.your_app>"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "3.2.10",
    "@sentry/react": "^5.27.1",
    "@sentry/tracing": "^5.27.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.20.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "date-fns": "^2.15.0",
    "electron-is-dev": "^1.2.0",
    "exceljs": "^4.1.1",
    "file-saver": "^2.0.2",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-datasheet": "^1.4.8",
    "react-dom": "^16.13.1",
    "react-hotkeys": "^2.0.0",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.1.0",
    "redux-undo": "^1.0.1",
    "typescript": "^3.9.7",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm build && electron-builder --publish=always",
    "e-build": "npm build && npm electron-build",
    "e-start": "concurrently \"cross-env BROWSER=none npm start\" \"node scripts/await.js && electron .\"",
    "lint": "eslint \"src/**/*.ts*\"",
    "cypress:open": "cypress open"
  },
  "devDependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "cypress": "^5.4.0",
    "cypress-file-upload": "^4.1.1",
    "dotenv": "^8.2.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "react/jsx-filename-extension": [
            1,
            {
              "extensions": [
                ".tsx"
              ]
            }
          ],
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never",
              "tsx": "never"
            }
          ]
        }
      }
    ],
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
